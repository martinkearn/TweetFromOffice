@model TweetFromOffice.BackEnd.Models.PostTweetViewModel

@{
    ViewBag.Title = "PostTweet";
}

<h2>@ViewBag.Title</h2>

<p>Enter your tweet</p>
@using (Html.BeginForm("PostTweet", "Home"))
{
    <div class="form-group">
        <label for="tweetText">Tweet text ...</label>
        <input type="text" id="tweetText" name="tweetText" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Tweet</button>
}
@if (Model.PostedTweetStatusId != 0)
{
    <hr />
    <p>Posted tweet ID: <b>@Model.PostedTweetStatusId</b></p>
    <p><a href="@string.Format("http://twitter.com/statuses/{0}", Model.PostedTweetStatusId)">View it on Twitter.com</a></p>
}

